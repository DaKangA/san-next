{
  "compilerOptions": {
    "jsx": "preserve",
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "typeRoots": ["./types"],
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/vuetify", "@types/jest"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
